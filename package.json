{
  "name": "wishlist-app",
  "version": "1.1.0",
  "description": "Wishlist application with DDD and Hexagonal Architecture",
  "main": "dist/index.js",
  "engines": {
    "node": "^24.0.0",
    "npm": "^11.0.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "WEB_FRAMEWORK=express node dist/index.js",
    "start:koa": "WEB_FRAMEWORK=koa node dist/index.js",
    "dev": "WEB_FRAMEWORK=express ts-node-dev --respawn src/index.ts",
    "dev:koa": "WEB_FRAMEWORK=koa ts-node-dev --respawn src/index.ts",
    "postinstall": "npm run build",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "@koa/router": "^13.1.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.1.0",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "koa": "^3.0.0",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^8.0.1",
    "koa-passport": "^6.0.0",
    "koa-session": "^7.0.2",
    "koa-static": "^5.0.0",
    "newrelic": "^12.24.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "pg-connection-string": "^2.9.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^30.0.0",
    "@types/koa": "^2.15.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-helmet": "^6.0.8",
    "@types/koa-passport": "^6.0.3",
    "@types/koa-session": "^6.4.5",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^24.0.10",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "jest": "^30.0.4",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
