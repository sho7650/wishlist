{
  "name": "wishlist-app",
  "version": "1.0.2",
  "description": "Wishlist application with DDD and Hexagonal Architecture",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "DB_TYPE=sqlite ts-node-dev --respawn src/index.ts",
    "dev:pg": "DB_TYPE=postgres ts-node-dev --respawn src/index.ts",
    "postinstall": "npm run build",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "pg": "^8.16.3",
    "pg-connection-string": "^2.6.0",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.4",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.16.0",
    "@types/pg": "^8.15.4",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.1",
    "cross-env": "^7.0.3",
    "jest": "^30.0.4",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
